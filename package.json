{
  "name": "positron-r-package-manager",
  "displayName": "positron-r-package-manager",
  "description": "Mimic RStudio's package management capabilities.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.96.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onTerminalOpen"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "positron-r-package-manager.installPackage",
        "title": "R: Install a Package",
        "icon": "$(desktop-download)"
      },
      {
        "command": "positron-r-package-manager.uninstallPackage",
        "title": "Uninstall Package",
        "icon": "$(trash)"
      },
      {
        "command": "positron-r-package-manager.updatePackages",
        "title": "R: Update Installed Packages",
        "icon": "$(arrow-circle-up)"
      },
      {
        "command": "positron-r-package-manager.refreshPackages",
        "title": "R: Refresh package information",
        "icon": "$(refresh)"
      },
      {
        "command": "positron-r-package-manager.searchPackages",
        "title": "R: Search for installed packages",
        "icon": "$(search)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "positron-r-packages",
          "title": "Packages",
          "icon": "$(book)"
        }
      ]
    },
    "views": {
      "positron-r-packages": [
        {
          "id": "rPackageView",
          "name": "Installed"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "positron-r-package-manager.installPackage",
          "when": "view == rPackageView",
          "group": "navigation@1"
        },
        {
          "command": "positron-r-package-manager.updatePackages",
          "when": "view == rPackageView",
          "group": "navigation@2"
        },
        {
          "command": "positron-r-package-manager.searchPackages",
          "when": "view == rPackageView",
          "group": "navigation@99"
        },
        {
          "command": "positron-r-package-manager.refreshPackages",
          "when": "view == rPackageView",
          "group": "navigation@100"
        }
      ],
      "view/item/context": [
        {
          "command": "positron-r-package-manager.uninstallPackage",
          "when": "view == rPackageView && viewItem == rPackage",
          "group": "inline@999"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.98.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "eslint": "^9.21.0",
    "typescript": "^5.7.3",
    "ts-loader": "^9.5.2",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  }
}
